  <div class="header-nav__container">
    <slot name="nav">
      <nav>
        <div class="global-link">
          <ul>
            {globallink.map(link => (
              <li class={`${link.submenu ? 'has-submenu' : '' } icon`} >
              <a href={`${link.url}`} set:html={link.name} > </a>
              {link.submenu && (
                  <ul class="sub-menu">
                  {link.submenu.map(submenuItem => (
                      <li class="flex justify-flex-start">
                      <a href={`${submenuItem.url}`} set:html={submenuItem.name}  target="_blank"></a>                      
                      </li>                    
                  ))}
                  <li class="back"><a href="#">Back</a></li>
                  </ul>
              )}
              </li>
            ))}
          </ul>
        </div>
      </nav>    
    </slot>
  </div>
  <div class="header-action-item__container hide">
    <slot name="action-item">
    </slot>
  </div>
